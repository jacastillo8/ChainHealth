<%- include ("partials/header") %>

<h1><i class="fas fa-plus-square"></i> <%= type[0].toUpperCase() + type.slice(1) %> Insurance</h1>

<form id='insurance' onsubmit="return formValidation()" method="POST" action="/api/insurance/<%= type %>/<%= action %>" >
    <br>
    <div class="form-row container">
        <div id="error"></div>
        <div class="form-group col-md-12">
            <label for="pid">Patient ID: </label>
            <input class='form-control' id="pid" name="pid" type='text' placeholder="<%= pid %>" value="<%= pid %>" readonly>
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <label for="date">Coverage Date: </label>
            <div class="input-group date datetimepicker">
                <input class='form-control required' id="date" name="date" placeholder="MM/DD/YYYY" type='text' readonly>
                <span class="input-group-addon"> 
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="provider">Provider: </label>
            <input class='form-control required' id="provider" name="provider" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="plan">Enrolled Plan: </label>
            <input class='form-control required' id="plan" name="plan" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class='form-group col-md-6'>
            <label for="policy_number">Policy #: </label>
            <input class='form-control required' id="policy_number" name="policy_number" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="policy_type">Policy Type: </label>
            <input class='form-control required' id='policy_type' name="policy_type" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class='form-group col-md-6'>
            <label for="group">Group #: </label>
            <input class='form-control required' id='group' name="group" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="copay">Copay: </label>
            <input class='form-control' id="copay" name="copay" type='text' autocomplete="off">
        </div>
    </div>
    <h3>Subscriber Information</h3>
    <br>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="fname">First Name: </label>
            <input class='form-control required' id="fname" name="fname" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="mname">Middle Name: </label>
            <input class='form-control required' id="mname" name="mname" type='text' autocomplete="off">
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="lname">Last Name: </label>
            <input class='form-control required' id="lname" name="lname" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="sex">Sex: </label>
            <select class="form-control required" id="sex" name="sex">
                <option value="">Choose...</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="relationship">Relationship to Patient: </label>
            <select class="form-control required" id="relationship" name="relationship">
                <option value="">Choose...</option>
                <option value="own">Own</option>
                <option value="parent">Parent</option>
                <option value="sibling">Sibling</option>
                <option value="spouse">Spouse</option>
                <option value="other">Other</option>
            </select>
        </div>
        <div class='form-group col-md-6'>
            <label for="ss">SSN: </label>
            <input class='form-control required' id="ss" name="ss" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="dob">DOB: </label>
            <div class="input-group date datetimepicker">
                <input class='form-control required' id="dob" name="dob" placeholder="MM/DD/YYYY" type='text' readonly>
                <span class="input-group-addon"> 
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="phone">Phone #: </label>
            <input class='form-control required' id="phone" name="phone" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <label for="street">Street: </label>
            <input class='form-control required' id="street" name="street" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="city">City: </label>
            <input class="form-control required" id="city" name="city" type="text" autocomplete="off"> 
        </div>
        <div class="form-group col-md-6">
            <label for="state">State: </label>
            <input class="form-control required" id="state" name="state" type="text" autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="postal">Postal Code: </label>
            <input class="form-control required" id="postal" name="postal" type="text" autocomplete="off">
        </div>
        <div class="form-group col-md-6">
            <label for="country">Country: </label>
            <input class="form-control required" id="country" name="country" type="text" placeholder="US" autocomplete="off">
        </div>
    </div>
    <h3>Employer Information</h3>
    <br>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="employer">Employer Name: </label>
            <input class="form-control required" id="employer" name="employer" type="text" autocomplete="off">
        </div>
        <div class="form-group col-md-6">
            <label for="estreet">Street: </label>
            <input class="form-control required" id="estreet" name="estreet" type="text" autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="ecity">City: </label>
            <input class="form-control required" id="ecity" name="ecity" type="text" autocomplete="off">
        </div>
        <div class="form-group col-md-6">
            <label for="estate">State: </label>
            <input class="form-control required" id="estate" name="estate" type="text" autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-6">
            <label for="epostal">Postal Code: </label>
            <input class="form-control required" id="epostal" name="epostal" type="text" autocomplete="off">
        </div>
        <div class="form-group col-md-6">
            <label for="ecountry">Country: </label>
            <input class="form-control required" id="ecountry" name="ecountry" type="text" placeholder="US" autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type='submit' class="btn btn-success btn-block">Submit</button>
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-danger btn-block" id='reset'>Reset Form</button>
        </div>
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script src="/js/new_insurance.js" type="text/javascript"></script>

<%- include ("partials/footer") %> 