<%- include ("partials/header") %>

<h1><i class="fas fa-heartbeat"></i> Patient Vitals</h1>

<form id='vitals' onsubmit="return formValidation()" method="POST" action="/api/vitals">
    <br>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <label for="pid">Patient ID: </label>
            <input class='form-control' id="pid" name="pid" type='text' placeholder="<%= pid %>" value="<%= pid %>" readonly>
        </div>
    </div>
    <div class="form-row container">
        <div id="error"></div>
        <div class="form-group col-md-12">
            <label for="list">Device ID: </label>
            <input list="device-list" type="text" class="form-control required" name="list" id="list" autocomplete="off">
            <datalist id="device-list">
                <option value="None"></option>
                <% devices.forEach(function(device) { %>
                    <option value="<%= device.location + ' - ' + device.client %>"></option>
                <% }) %>
            </datalist>
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="bps">Blood Pressure - Systolic: </label>
            <input class='form-control required' id="bps" name="bps" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="bpd">Blood Pressure - Diastolic: </label>
            <input class='form-control required' id="bpd" name="bpd" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-primary btn-block btn-mqtt" id="BP">Get Blood Pressure</button>
        </div>
    </div>
    <div class="form-row container">
        <div class='form-group col-md-6'>
            <label for="spo2">Oxygen Saturation: </label>
            <input class='form-control required' id="spo2" name="spo2" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="pulse">Pulse: </label>
            <input class='form-control required' id='pulse' name="pulse" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-primary btn-block btn-mqtt" id="SPO2">Get SPO2</button>
        </div>
    </div>
    <div class="form-row container">
        <div class='form-group col-md-6'>
            <label for="temp">Temperature: </label>
            <input class='form-control required' id='temp' name="temp" type='text' autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="temp_method">Method: </label>
            <input class='form-control' name="temp_method" type='text' placeholder="Axillary" value="Axillary" readonly>
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-primary btn-block btn-mqtt" id="Temp">Get Temperature</button>
        </div>
    </div>
    <div class="form-row container">
        <div class='form-group col-md-12'>
            <label for="resp">Respirations per Minute: </label>
            <input class='form-control required' id='resp' name="resp" type='text' autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-primary btn-block btn-mqtt" id="Resp">Get Respiration</button>
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="weigth">Weight: </label>
            <input class='form-control required' id="weigth" name="weight" type='text' placeholder="lbs" autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="height">Height: </label>
            <input class='form-control required' id="height" name="height" type='text' placeholder="in" autocomplete="off">
        </div>
    </div>
    <div class='form-row container'>
        <div class='form-group col-md-6'>
            <label for="waist">Waist - Circumference: </label>
            <input class='form-control required' id="waist" name="waist" type='text' placeholder="in" autocomplete="off">
        </div>
        <div class='form-group col-md-6'>
            <label for="head">Head - Circumference: </label>
            <input class='form-control required' id="head" name="head" type='text' placeholder="in" autocomplete="off">
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <label for="notes">Notes: </label>
            <textarea class="form-control" name="notes" rows="3"></textarea>
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type='submit' class="btn btn-success btn-block">Submit</button>
        </div>
    </div>
    <div class="form-row container">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-danger btn-block" id='reset'>Reset Form</button>
        </div>
    </div>
</form>

<script src="/js/new_vitals.js" type="text/javascript"></script>

<%- include ("partials/footer") %> 