<%- include ("partials/header") %>

<h1><i class="fas fa-sign-in-alt"></i> Login</h1>
<br>
<br>
<form class="form" onsubmit="return formValidation()" method="POST" action="/users/login" id="login-nav">
    <div id="error"></div>
    <div class="form-group">
        <label for="org"><i class="fas fa-passport circle-icon"></i> Organization:</label>
        <select class="form-control required" id="org" name="org">
            <option value="">Choose...</option>
            <% orgs.forEach(function(org) { %>
                <option value="<%= org.name %>"><%= org.display %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="username"><i class="fas fa-user circle-icon"></i> Username:</label>
        <input type="text" class="form-control required" id="username" name="usr" placeholder="Username" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="password"><i class="fas fa-key circle-icon"></i> Password:</label>
        <input type="password" class="form-control required" id="password" name="pass" placeholder="Password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Sign in</button>
    </div>
</form>

<script src="/js/login.js"></script>

<%- include ("partials/footer") %> 